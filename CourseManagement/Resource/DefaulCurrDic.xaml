<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--窗体操作按钮样式模板-->
    <ControlTemplate x:Key="WinButtonTemplate" TargetType="Button">
        <Border Background="Transparent" >
            <TextBlock Name="btwin" Text="{Binding Content,RelativeSource={RelativeSource AncestorType=Button,Mode=FindAncestor}}"
                       VerticalAlignment="Center" HorizontalAlignment="Center"
                       FontFamily="../Assets/iconfont/#iconfont"></TextBlock>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter TargetName="btwin" Property="Foreground" Value="black"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style TargetType="Button" x:Key="WinButtonStyle">
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Template" Value="{StaticResource WinButtonTemplate}"/>
    </Style>
    
</ResourceDictionary>